<div class="container" id="hochschule">
			<div class="row">
				<div class="span12">
					<hr class="fancy-hr">
				</div>
				<div class="span12">
					<h1><%= @university.name %></h1>
				</div>
					
				<div class="span8">
					<div id="tabs">
						<ul class="nav nav-tabs">
						    <% @unicontent.each_with_index do |uni, i| %>
						    <li><a href="#tabs-<%=i%>"><%=uni.title%></a></li>
						    <%end%>
						    <li><a href="#tabs-100">Studieng√§nge</a></li>
						</ul>
						<% @unicontent.each_with_index do |uni, i| %>
						<div class="tab" id="tabs-<%=i%>">
						    <p><%=uni.content%></p>
						</div>
						<%end%>
						<div class="tab" id="tabs-100">
						    <% @unisubject.each do|uni|%>
						    <p><%= uni.subject_type.name %> im Bereich <%= uni.subject.name%> </p>
						    <%end%>
						</div>
						
					</div>
				</div>
					
				<div class="span4">
					<div class="contact-info">
						<h2  class="no-bottom-margin">Allgemeines</h2>
						<hr class="fancy-hr">
						<ul class="custom-icon-list">
							<li><img src="http://ranking.zeit.de/che2013/images/logos/bhft_berlin.gif" /></li>
							<li><%= @university.address.street%> <%= @university.address.street_number%></li>
							<li>D-<%= @university.address.postalcode%> <%= @university.address.city.name%></li>
							<li><i class="icon-home"></i><%= link_to(@university.website, @university.website) %></li>
						</ul>
					</div>
				</div>

				<div class="span8">
					<p>
					<h2 class="no-bottom-margin">Bewertungen</h2>
					<table class="table table-striped table-bordered">
					  <tr>
					    <th>Kriterium</th>
					    <th>Rating</th>
					  </tr>
					  <% @unisection.each do|uni| %>
					  <tr>
					    <td><%= uni.section %></td>
					    <td>to do</td>
					  </tr>
					  <%end%>
					</table>
				</div>

				<div class="span8"><!-- Kommentar abgeben -->
					<form action="#123" method="post" class="form">
						<h3>Hinterlassen sie einen Kommentar</h3>
						<textarea name="message" placeholder="Insert your message" class="required"></textarea>
						<div class="response-message"></div>
						<input type="submit" value="Absenden" name="submit" class="float-right">
						<div class="clear"></div>
					</form><p>
				</div> 
				
				<div class="span8" id="comments"><!-- Eigener KommentarKommentare -->
					<% @unicomment.each do|uni| %>
					<form method="post" class="form">
						<img src="http://placehold.it/60x60" class="commentPic float-left" />
						<h3 class="no-bottom-margin">John Doe</h3>
						Kommentar vom: 31.12.2013
						<hr class="fancy-hr no-top-margin no-bottom-margin">
						<div class="clear"></div>
						<p><%=uni.comment%></p>
						<input type="submit" value="L&ouml;schen" formaction="#delete" name="submit" class="float-right commentButton no-bottom-margin">
						<input type="submit" value="Editieren" formaction="#edit" name="submit" class="float-right commentButton no-bottom-margin">
						<div class="clear"></div>
					</form>
					<p>
				<%end%>			
				</div>
				
				<div class=" span8 pagechange"><!-- SEITENWECHSELN -->
					<center>
						<a><i class="icon-circle-arrow-left pageArrow"></i>Vorherige</a>
						<a>1</a>
						<a>2</a>
						<a>3</a>
						<a>N&auml;chste<i class="icon-circle-arrow-right pageArrow"></i></a>
					</center>
				</div>
			</div> <!-- End Row -->
		</div>
