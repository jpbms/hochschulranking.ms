<% content_for :javascript_includes do %>
  <%= javascript_include_tag 'jquery.raty.js','letsrate.js'%>
<% end %> 
<div class="container">
			<div class="row">
				<div class="span8">
					<h1>Liste</h1>

					<table id="list" class="table table-striped table-bordered">
					  <tr>
					    <th>Platz!</th>
					    <th>Hochschule</th>
					    <th>Ort</th>
					    <th>Rating</th>
					  </tr><tbody id="innerlist">
					  
					  <% @unis.each_with_index do |uni, i| %>
						<tr> 
							<td><%= i+1 %></td>
							<td><%= link_to(uni.name, uni) %></td>
							<td><%= uni.address.city.name %></td>
							<%= javascript_include_tag 'application'%>           
					    <%= yield :javascript_includes %>
							<td><%= rating_for uni, "allgemein", :star => 5%></td>
						</tr>
					  <% end %></tbody>
					</table>

				</div>
				<div class="span4">
					<div class="feature-box">
						<div class="box-content">
							<h4>Filtern</h4><p>
							<div class="form-group no-padding text-left">
								Suchen<input id="toplistSearch" type="text" name="search" placeholder="Suche" class="required">
								<input class="checkbox" type="checkbox" name="test" value="test">Test Text<br>
								<input class="checkbox" type="checkbox" name="test1" value="test1">Test 1 Text<br>
								<input class="checkbox" type="checkbox" name="test2" value="test2">Test 2 Text<br>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
