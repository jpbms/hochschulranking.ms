		<%= javascript_include_tag :defaults %>

		<script type="text/javascript" src="/js/jquery.min.js"></script> <!-- jQuery main file -->
		<script src="http://code.jquery.com/ui/1.10.3/jquery-ui.js"></script> <!-- jQuery UI -->
		<script type="text/javascript" src="/js/bootstrap.min.js"></script> <!-- Bootstrap main file -->
