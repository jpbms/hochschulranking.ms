<div class="container">
  <div class="row"> 
    <div class="span2"></div>
    <div class="span8">

      <h2>Editing profile</h2>
      
      <%= form_for(@profile) do |f| %>
        <% if @profile.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

            <ul>
            <% @profile.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>


        <div class="field">
          <div style="float: right;">
            <img src='<%= Gravatar.new(User.find(@profile.id).email).image_url%>' />
          </div>
	  <% if @profile.nickname != nil %>
	    <% if @profile.nickname == "" %>
		<div style="float: left;"><h2><%=User.find(@profile.id).email %></h2></div>
	    <% else %>
		<div style="float: left;"><h2><%= @profile.nickname %></h2></div>
	    <%end%>
	  <%else%>
	    <div style="float: left;"><h2><%=@profile.id %></h2></div>
	  <% end %>
        </div>   
        <hr class="fancy-hr">
        <div class="field"><p>&nbsp;<p>&nbsp;<p>
          <%= f.label :nickname %><br>
          <%= f.text_field :nickname, :readonly => true %>
        </div>
         <div class="field">
          <%= f.label :first_name %><br>
          <%= f.text_field :first_name, :readonly => true%>
        </div>
        <div class="field">
          <%= f.label :last_name %><br>
          <%= f.text_field :last_name, :readonly => true%>
        </div>
        <div class="field">
          <%= f.label :phonenumber %><br>
          <%= f.text_field :phonenumber, :readonly => true %>
        </div>
        <div class="field">
          <%= f.label :city %><br>
          <%= f.text_field :city, :readonly => true %>
        </div>
      <% end %>

<div class="span2"></div>
